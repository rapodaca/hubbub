<div class="article">
  <div class="head">
    <div class="right">
      <h3 class="title">
        <%= link_to article.title, article_permalink_url(article) %>
      </h3>
      <div class="date">
        <%= article.created_at.strftime("%A %B %d, %Y") %>
      </div>
    </div>
    <br style="clear: both;" />
  </div>
  <div class="body">
    <div class="right">
      <%= article.body_html %>      
    </div>
  </div>
  <div class="meta">
    <div class="right section">
      <div class="item">
        Tags:&nbsp;
        <ul>
          <% for tag in article.tags %>
            <li><%= link_to tag.slug, tag_url(tag) %></li>
          <% end %>
        </ul>
      </div>
      <% if defined?(summary) %>
        <div class="item">
          Community:&nbsp;
          <%= link_to 'Comments and Reactions', article_permalink_url(article) + '#disqus_thread' %>
        </div>
      <% end %>
    </div>
  </div>
  <br style="clear: both;" />
</div>